{
  "name": "webhooks",
  "version": "0.0.1",
  "description": "My personal collection of webhooks.",
  "main": "index.js",
  "keywords": [
    "webhooks"
  ],
  "license": "MIT",
  "author": "Giacomo Debidda <giacomo@giacomodebidda.com> (https://giacomodebidda.com/)",
  "scripts": {
    "build": "true",
    "deploy": "wrangler pages publish ./pages",
    "dev": "run-p forward-stripe-webhook-events pages:dev",
    "forward-stripe-webhook-events": "stripe listen --events customer.created,customer.deleted,payment_intent.succeeded,price.created,product.created --api-key=$STRIPE_API_KEY_TEST --forward-to localhost:8788/stripe --log-level info --device-name 'ThinkPad L380'",
    "nuke": "rm -rf node_modules package-lock.json",
    "make-dev-vars": "node scripts/make-dev-vars.mjs",
    "pages:dev": "wrangler pages dev ./pages --local --compatibility-date=2023-03-22",
    "stripe:webook-secret": "stripe listen --api-key $STRIPE_API_KEY_TEST --print-secret",
    "tunnel": "ngrok http 8788"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.1.2",
    "hono": "^3.1.2",
    "stripe": "^11.15.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230321.0",
    "npm-run-all": "^4.1.5",
    "wrangler": "^2.13.0"
  }
}
